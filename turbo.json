{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "CLOUDFLARE_ENDPOINT",
    "CLOUDFLARE_ACCESSID",
    "CLOUDFLARE_ACCESSSECRET",
    "ENCRYPTION_KEY",
    "BUCKET",
    "REDIS_URL",
    "DATABASE_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": { 
      "cache": false
    }, 
    "db:migrate": { 
      "cache": false, 
      "persistent": true
    }, 
    "db:deploy": { 
      "cache": false
    } 
  }
}
