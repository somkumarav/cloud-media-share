{
  "name": "worker",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:push": "pnpm --filter @repo/db db:push",
    "db:migrate": "pnpm --filter @repo/db db:migrate",
    "db:generate": "pnpm --filter @repo/db db:generate",
    "db:studio": "pnpm --filter @repo/db db:studio",
    "web:start": "pnpm --filter web start",
    "worker:start": "pnpm --filter worker start",
    "worker:build": "pnpm --filter worker build"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
